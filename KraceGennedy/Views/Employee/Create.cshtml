
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model RegisterViewModel


<h4>Update Employee Records</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FirstName">First Name</label>
                <input asp-for="FirstName" type="text" class="form-control">
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName">Last Name</label>
                <input asp-for="LastName" type="text" class="form-control">
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TelephoneNum">Telephone number</label>
                <input asp-for="TelephoneNum" type="text" class="form-control">
                <span asp-validation-for="TelephoneNum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DOB">Date Of Birth</label>
                <input asp-for="DOB" type="text" class="form-control">
                <span asp-validation-for="DOB" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gender">Gender</label>
            </div>
            <div class="form-check-inline">
                <input asp-for="Gender" class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios1" value="M" checked>
                <label class="form-check-label" for="exampleRadios1">
                    Male
                </label>&nbsp;
                <input asp-for="Gender" class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios2" value="F">
                <label class="form-check-label" for="exampleRadios2">
                    Female
                </label>
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PositionId">Position</label>
                @Html.DropDownListFor(x => Model.PositionId, new SelectList(Model.position, "ID", "PositionName"), htmlAttributes: new { @class = "form-control" })
                <span asp-validation-for="PositionId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RoleId">Role</label>
                @Html.DropDownListFor(x => Model.RoleId, new SelectList(Model.Role, "Id", "Name"), htmlAttributes: new { @class = "form-control" })
                <span asp-validation-for="RoleId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Branch">Branch</label>
                <input asp-for="Branch" type="text" class="form-control">
                <span asp-validation-for="Branch" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address">Address</label>
                <input asp-for="Address" type="text" class="form-control">
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CityID">City</label>
                @Html.DropDownListFor(x => Model.CityID, new SelectList(Model.city, "ID", "CityName"), htmlAttributes: new { @class = "form-control" })
                <span asp-validation-for="CityID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Country">Country</label>
                <input asp-for="Country" type="text" class="form-control">
                <span asp-validation-for="Country" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>

    </div>
</div>

<div>
    <a asp-action="Employee Form">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
